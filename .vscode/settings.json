{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "stylelint.validate": ["vue"],
  "typescript.tsdk": "node_modules\\typescript\\lib",

  // markdown
  "[markdown]": {
    "editor.formatOnSave": false
  },
  // yaml
  "[yaml]": {
    "editor.formatOnSave": false
  }
}
